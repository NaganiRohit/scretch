<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start  bg-slate-400 text-white text-md">
        
        <div class="w-full px-10 flex bg-white flex-col gap-5 h-screen">
            <div class="flex justify-between text-black items-center">
                <div class="flex gap-5">
                <a class="block w-fit mb-2" href="/owners/AllProducts">All Products</a>
                <a class="block w-fit mb-2" href="/owners/createProduct">Create new product</a> </div>

                <% if (products.length === 0) { %>
                    <a class="text-white bg-green-700 text-center w-60 px-5 font-semibold rounded-md py-1" 
                       href="/owners/createProduct">Create Product</a>
                <% } else { %>
                    <a class="text-white bg-red-500 w-28 px-5 font-semibold rounded-md py-1" 
                       href="/owners/deleteAll" 
                       onclick="return confirm('Are you sure you want to delete all products?');">Delete all</a>
                <% } %>

            </div>
            
            
            <div class="flex items-start gap-5  flex-wrap text-md">
                <% products.forEach(function(product){ %>
                    <div class="w-48 text-sm flex-shrink-0"> <!-- Adding flex-shrink-0 to prevent shrinking -->
                        <div class="w-full h-auto py-4 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                            <img class="h-[8rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                        </div>
                        <div class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-3 py-2 text-[<%= product.textcolor %>]">
                            <div>
                                <h3><%= product.name %></h3>
                                <h4>â‚¹ <%= product.price %></h4>
                            </div>
                            <div>
                                <a href="/owners/deleteOne?id=<%= product._id %>">
                                    <button class="inline-block bg-red-500 px-2 py-1 rounded-md text-white">Delete</button>
                                </a>
                            </div>
                        </div>
                        
                    </div>
                <% }) %>
            
    
        </div>
    </div>
    <%- include('./partials/footer') %>