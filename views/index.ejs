<%- include('./partials/header') %>

<% if(error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="flex flex-col lg:flex-row items-center justify-center min-h-screen px-5 lg:px-20 bg-gray-100">
    <!-- Registration Section -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-5">
        <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-8">
            <h3 class="text-3xl font-bold mb-4 text-center text-blue-500">Welcome to <span class="font-semibold">Scatch</span></h3>
            <h4 class="text-lg text-gray-600 mb-6 text-center">Create your account</h4>
            <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
                <input
                    class="bg-gray-100 block w-full px-4 py-3 border rounded-lg border-gray-300 text-lg focus:ring focus:ring-blue-200"
                    type="text" placeholder="Full Name" name="fullname">
                <input
                    class="bg-gray-100 block w-full px-4 py-3 border rounded-lg border-gray-300 text-lg focus:ring focus:ring-blue-200"
                    type="email" placeholder="Email" name="email">
                <input
                    class="bg-gray-100 block w-full px-4 py-3 border rounded-lg border-gray-300 text-lg focus:ring focus:ring-blue-200"
                    type="password" placeholder="Password" name="password">
                <input
                    class="w-full bg-blue-500 text-white py-3 rounded-lg text-lg font-medium hover:bg-blue-600 cursor-pointer"
                    type="submit" value="Create My Account">
            </form>
        </div>
    </div>

    <!-- Login Section -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-5">
        <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-8">
            <h4 class="text-2xl font-bold mb-6 text-center text-gray-700">Login to Your Account</h4>
            <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
                <input
                    class="bg-gray-100 block w-full px-4 py-3 border rounded-lg border-gray-300 text-lg focus:ring focus:ring-blue-200"
                    type="email" placeholder="Email" name="email">
                <input
                    class="bg-gray-100 block w-full px-4 py-3 border rounded-lg border-gray-300 text-lg focus:ring focus:ring-blue-200"
                    type="password" placeholder="Password" name="password">
                <input
                    class="w-full bg-blue-500 text-white py-3 rounded-lg text-lg font-medium hover:bg-blue-600 cursor-pointer"
                    type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
